<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    tools:context=".OptionsMenuResources.SettingsActivity.FeedbackActivity">

    <TextView
        android:id="@+id/hi_text_view"
        android:text="Hi, "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/name_text_view"
        android:layout_toEndOf="@+id/hi_text_view"
        tools:text="Anant"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/para1_text_view"
        android:layout_below="@+id/hi_text_view"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black"
        android:text="FruitWala is an initiative one of its kind, to provide back the campus the hygiene it needs."/>

    <TextView
        android:id="@+id/para2_text_view"
        android:layout_below="@id/para1_text_view"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The purpose of FruitWala is to provide the best quality fruits, better than any basket, Big or Small!, at an optimal price."/>

    <TextView
        android:id="@+id/para3_text_view"
        android:layout_below="@+id/para2_text_view"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FruitWala is not meant to be profitable to the FruitWala makers, but to you. Fruits will be delivered to your room as quickly as possible after you order."/>

    <TextView
        android:id="@+id/greetings_text_view"
        android:layout_below="@+id/para3_text_view"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Greetings,"/>

    <TextView
        android:id="@+id/team_fruitwala_text_view"
        android:layout_below="@+id/greetings_text_view"
        android:layout_marginTop="2dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team FruitWala"/>

        <Button
            android:id="@+id/feedback_btn"
            android:layout_below="@+id/team_fruitwala_text_view"
            android:layout_marginTop="32dp"
            android:text="feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/version_text_view"
            android:layout_below="@+id/feedback_btn"
            android:text="VERSION  1.2.0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</ScrollView>